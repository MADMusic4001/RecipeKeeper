<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/recipe_scroll_view"
            android:layout_width="match_parent"
             android:layout_height="wrap_content">

  <LinearLayout
      android:id="@+id/recipe_detail_scroll_layout"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <EditText
        android:id="@+id/recipe_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_name"/>
    <EditText
        android:id="@+id/recipe_description_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_description"/>
    <EditText
        android:id="@+id/recipe_directions_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_directions"/>
    <LinearLayout
        android:id="@+id/add_category_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <Spinner
          android:id="@+id/add_category_spinner"
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:prompt="@string/label_category"/>
      <ImageButton
          android:id="@+id/add_category_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_action_new"
          android:layout_weight="0"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/categories_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/add_ingredient_list"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <EditText
          android:id="@+id/add_ingredient_quantity_edit"
          android:layout_weight="1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"/>
      <Spinner
          android:id="@+id/add_ingredient_unit_of_measure_spinner"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"/>
      <EditText
          android:id="@+id/add_ingredient_name_edit"
          android:layout_width="0dp"
          android:layout_height="wrap_content"/>
      <ImageButton
          android:id="@+id/add_ingredient_button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:src="@drawable/ic_action_new"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ingredients_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/recipe_notes_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_notes"/>
    <EditText
        android:id="@+id/recipe_source_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/label_source"/>
    <TextView
        android:id="@+id/recipe_created_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/recipe_updated_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/recipe_save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_save"/>
  </LinearLayout>
</ScrollView>